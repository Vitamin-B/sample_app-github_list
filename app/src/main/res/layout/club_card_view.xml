<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ClubCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/club_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:contentDescription="@string/club_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/club_logo"
            android:layout_alignBottom="@id/club_logo"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/club_logo"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/club_name_tw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:text="@string/app_name"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/club_country_tw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:text="@string/app_name"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/club_value_tw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:paddingStart="8sp"
                android:paddingTop="10dp"
                android:paddingEnd="8sp"
                android:text="@string/app_name"
                android:textAlignment="viewEnd"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>